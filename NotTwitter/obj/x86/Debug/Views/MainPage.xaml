<Page
    x:Class="NotTwitter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotTwitter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <RelativePanel Grid.Column="0" Grid.Row="0" Background="LightGray" Grid.ColumnSpan="2">
            <Button x:ConnectionId='15' Name="MenuButton" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"                          Width="45" Height="45"/>
            <Button x:ConnectionId='16' Name="BackButton" FontFamily="Segoe MDL2 Assets" Content="&#xE830;"                          Width="45" Height="45" RelativePanel.RightOf="MenuButton" Background="Transparent" BorderBrush="Transparent"  />
        </RelativePanel>
            
        <SplitView x:ConnectionId='2' Name="MenuPanel" Grid.Row="1" Grid.Column="0" DisplayMode="CompactOverlay" IsPaneOpen="False" OpenPaneLength="275" CompactPaneLength="45">
            <SplitView.Pane>
                <ListBox>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='13' Name="Home" FontFamily="Segoe MDL2 Assets" Content="&#xE80F;"                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='14' Name="HomeLink" Text="Home"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='11' Name="Users" FontFamily="Segoe MDL2 Assets" Content="&#xE77B;"                     Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='12' Name="UsersLink" Text="Users"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='9' Name="Posts" FontFamily="Segoe MDL2 Assets" Content="&#xE8A1;"                     Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='10' Name="PostsLink" Text="Posts"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='7' Name="Comments" FontFamily="Segoe MDL2 Assets" Content="&#xE90A;"                        Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='8' Name="CommentsLink" Text="Comments"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='5' Name="Albums" FontFamily="Segoe MDL2 Assets" Content="&#xE8F1;"                      Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='6' Name="AlbumsLink" Text="Albums"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem>
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='3' Name="Photos" FontFamily="Segoe MDL2 Assets" Content="&#xE8D4;"                      Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left" Padding="0,0,15,0"/>
                            <TextBlock x:ConnectionId='4' Name="PhotosLink" Text="Photos"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame></Frame>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>

